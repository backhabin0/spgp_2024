<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageButton
            android:id="@+id/prevButton"
            android:background="@drawable/btn_prev"
            android:layout_width="@dimen/page_btn_size"
            android:layout_height="@dimen/page_btn_size"
            android:onClick="onBtnPrev"
            />
        <TextView
            android:id="@+id/pageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/6"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/nextButton"
            android:background="@drawable/btn_next"
            android:layout_width="@dimen/page_btn_size"
            android:layout_height="@dimen/page_btn_size"
            android:onClick="onBtnNext"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/mainImageView"
        android:src="@mipmap/cat_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>